{
  "name": "site-montdenis",
  "version": "0.0.3",
  "description": "Site Pension et Elevage de Montdenis",
  "main": "dist/index.html",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./tmp && mkdir -p ./dist/css && mkdir -p ./dist/js && mkdir -p ./dist/img && mkdir -p ./tmp/contact && mkdir -p ./tmp/elevage && mkdir -p ./tmp/installations",
    "copy:txt": "cp ./src/*.txt ./dist/",
    "copy:html": "cp ./src/*.html ./dist/",
    "copy:xml": "cp ./src/*.xml ./dist/",
    "copy:favicon": "cp ./src/favicon/* ./dist/",
    "copy:img": "cp ./src/img/* ./dist/img/",
    "copy": "npm run copy:txt && npm run copy:html && npm run copy:xml && npm run copy:favicon && npm run copy:img",
    "js": "cat ./src/js/nav.js ./src/js/googleAnalytics.js | ./node_modules/.bin/uglifyjs -c -mt --preamble //${npm_package_name}@${npm_package_version} > ./tmp/index.js",
    "mustache": "./mustache.js -b `git log --pretty=format:'%h' -n 1` -p \"src/partials/*.html\" -t \"src/html/**/*.html\" -o ./tmp",
    "html-minify": "./node_modules/.bin/html-minifier --config-file ./html-minifier.json --input-dir ./tmp --output-dir ./dist",
    "html": "npm run mustache && npm run html-minify",
    "style": "./node_modules/.bin/lessc ./src/css/style.less | cat ./node_modules/normalize.css/normalize.css - | ./node_modules/.bin/cleancss -o ./dist/css/style.min.css",
    "build": "npm run clean && npm run copy && npm run js && npm run html && npm run style"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/site-montdenis.git"
  },
  "keywords": [],
  "author": "Vincent Boutour",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ViBiOh/site-montdenis/issues"
  },
  "homepage": "https://github.com/ViBiOh/site-montdenis",
  "devDependencies": {
    "clean-css": "latest",
    "glob": "latest",
    "html-minifier": "latest",
    "js-utils": "git+https://github.com/ViBiOh/js-utils.git",
    "less": "latest",
    "mkdirp": "latest",
    "mustache": "latest",
    "normalize.css": "latest",
    "uglify-js": "latest",
    "yargs": "latest"
  },
  "dependencies": {}
}
