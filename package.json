{
  "name": "site-montdenis",
  "version": "0.0.1",
  "description": "Site Pension et Elevage de Montdenis",
  "main": "dist/index.html",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p ./dist/css",
    "robots": "cp ./src/*.txt ./dist/",
    "html": "./node_modules/.bin/html-minifier -o ./dist/index.html --collapse-boolean-attributes --collapse-whitespace --decode-entities --html-5 --minify-js=true --remove-attribute-quotes --remove-comments --remove-optional-tags --sort-attributes --sort-class-name --use-short-doctype ./src/index.html",
    "style": "./node_modules/.bin/lessc ./src/css/style.less -o style.css && cat ./node_modules/normalize.css/normalize.css style.css | ./node_modules/.bin/cleancss -o ./dist/css/style.min.css && rm -f style.css",
    "build": "npm run clean && npm run robots && npm run html && npm run style"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/site-montdenis.git"
  },
  "keywords": [],
  "author": "Vincent Boutour",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ViBiOh/site-montdenis/issues"
  },
  "homepage": "https://github.com/ViBiOh/site-montdenis",
  "devDependencies": {
    "clean-css": "latest",
    "html-minifier": "latest",
    "less": "latest",
    "normalize.css": "latest"
  },
  "dependencies": {}
}
