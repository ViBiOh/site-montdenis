{
  "name": "site-montdenis",
  "version": "0.0.4",
  "description": "Site Pension et Elevage de Montdenis",
  "main": "dist/index.html",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./tmp && mkdir ./tmp && mkdir -p ./dist/img",
    "copy:robots": "cp ./src/robots.txt ./dist/",
    "copy:html": "cp ./src/*.html ./dist/",
    "copy:favicon": "cp ./src/favicon/* ./dist/",
    "jpegtran": "./node_modules/js-index-builder/jpegtran.js -i \"./src/img/*.jpg\" -o ./dist/img/",
    "copy:svg": "cp ./src/img/*.svg ./dist/img/",
    "copy": "npm run copy:robots && npm run copy:html && npm run copy:favicon && npm run jpegtran && npm run copy:svg",
    "stylelint": "./node_modules/.bin/stylelint \"src/**/*.less\"",
    "eslint": "./node_modules/.bin/eslint --fix src/js/nav.js",
    "lint": "npm run stylelint && npm run eslint",
    "js-google": "curl -f https://www.google-analytics.com/analytics.js | ./node_modules/.bin/uglifyjs -c > ./dist/analytics.js",
    "js-perso": "cat ./src/js/nav.js ./src/js/googleAnalytics.js | ./node_modules/.bin/uglifyjs -c > ./tmp/index.js",
    "js": "npm run js-google && npm run js-perso",
    "style": "./node_modules/.bin/lessc ./src/css/style.less | cat ./node_modules/normalize.css/normalize.css - | ./node_modules/.bin/cleancss -O2 -o ./tmp/style.css",
    "mustache": "./node_modules/js-index-builder/index.js -t \"src/html/**/*.html\" -b `git log --pretty=format:'%h' -n 1` -p \"src/partials/*.html\" -j ./tmp/index.js -c ./tmp/style.css -s ./src/img/logo_404.svg -o ./tmp",
    "html-minify": "./node_modules/.bin/html-minifier --config-file ./html-minifier.json --input-dir ./tmp --output-dir ./dist",
    "html": "npm run mustache && npm run html-minify",
    "structure": "./node_modules/js-index-builder/sitemap.js -j \"src/html/**/*.json\" -s ./dist/sitemap.xml",
    "build": "npm run clean && npm run lint && npm run copy && npm run js && npm run style && npm run structure && npm run html"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/site-montdenis.git"
  },
  "keywords": [],
  "author": "Vincent Boutour",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ViBiOh/site-montdenis/issues"
  },
  "homepage": "https://github.com/ViBiOh/site-montdenis",
  "devDependencies": {
    "clean-css-cli": "latest",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-config-airbnb-base": "latest",
    "eslint-plugin-import": "latest",
    "html-minifier": "latest",
    "js-index-builder": "git+https://github.com/ViBiOh/js-index-builder.git",
    "less": "latest",
    "normalize.css": "latest",
    "stylelint": "latest",
    "stylelint-config-standard": "latest",
    "uglify-js": "latest"
  },
  "dependencies": {},
  "eslintConfig": {
    "extends": "airbnb/base",
    "rules": {
      "max-len": 1,
       "import/no-extraneous-dependencies": 1
    },
    "env": {
        "browser": true,
        "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
