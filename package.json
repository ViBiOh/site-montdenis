{
  "name": "site-montdenis",
  "version": "0.0.1",
  "description": "Site Pension et Elevage de Montdenis",
  "main": "dist/index.html",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p ./dist/css",
    "copy:index": "find ./src -type f | grep -v './src/css' | xargs -0 -I {} cp -a {} ./dist",
    "copy:style": "cp ./src/css/*.css ./dist/css/",
    "copy": "npm run copy:index && npm run copy:style",
    "style": "./node_modules/.bin/lessc ./src/css/style.less | ./node_modules/.bin/cleancss -o ./dist/css/style.min.css",
    "build": "npm run clean && npm run copy && npm run style"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ViBiOh/site-montdenis.git"
  },
  "keywords": [],
  "author": "Vincent Boutour",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ViBiOh/site-montdenis/issues"
  },
  "homepage": "https://github.com/ViBiOh/site-montdenis",
  "devDependencies": {
    "less": "latest",
    "clean-css": "latest"
  },
  "dependencies": {}
}
